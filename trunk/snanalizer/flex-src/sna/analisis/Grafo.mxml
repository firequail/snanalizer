<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:ravis="org.un.cava.birdeye.ravis.graphLayout.visual.*"
	xmlns:lc="org.un.cava.birdeye.ravis.components.ui.controls.layouterControls.*"
	xmlns:dp="org.un.cava.birdeye.ravis.components.ui.dataPresentation.*"
	xmlns:grafo="sna.analisis.*"
	width="100%" height="100%">

	<mx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.events.ListEvent;
			import mx.controls.Alert;
			import mx.rpc.events.ResultEvent;
			
			private var grafoRavis:GrafoRavis;
			
			public var puntoDeVistaId:Object;
			
			public function refresh():void {
				if (grafoRavis!= null ) {
					removeChild(grafoRavis);
				}
				grafoRavis = new GrafoRavis();
				grafoRavis.addEventListener(FlexEvent.CREATION_COMPLETE, grafoRefresh);
				addChild(grafoRavis);
				grafoRavis.puntoDeVistaId = puntoDeVistaId as int;
			}
			
			private function grafoRefresh(event:FlexEvent):void {
				grafoRavis.refresh();
			}
			
		]]>
	</mx:Script>
		
</mx:Canvas>
