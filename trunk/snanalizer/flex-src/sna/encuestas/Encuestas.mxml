<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" xmlns:analisis="sna.analisis.*" xmlns:ns1="sna.encuestas.*">
	<mx:states>
		<mx:State name="nuevaEncuesta">
			<mx:RemoveChild target="{button1}"/>
			<mx:AddChild position="lastChild">
				<ns1:NuevaEncuesta id="nuevaEncuestaForm" result="currentState=''"/>
			</mx:AddChild>
		</mx:State>
	</mx:states>
	<mx:Button x="262" y="270" label="Nueva Encuesta" click="nuevaEncuesta()" id="button1"/>
	
	<mx:Script>
		<![CDATA[
			
			public function nuevaEncuesta():void {
				this.currentState = "nuevaEncuesta";
				nuevaEncuestaForm.init();
			}
			
		]]>
	</mx:Script>	
	
</mx:Canvas>