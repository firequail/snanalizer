<?xml version="1.0" encoding="UTF-8"?>
<service id="remoting-service" 
    class="flex.messaging.services.RemotingService">

    <adapters>
        <adapter-definition id="java-object" class="flex.messaging.services.remoting.adapters.JavaAdapter" default="true"/>
    </adapters>

    <default-channels>
        <channel ref="my-amf"/>
    </default-channels>

    <destination id="testService">
    	<properties>
    		<factory>spring</factory>
    		<source>testService</source>
    	</properties>
    </destination>

    <destination id="initDBService">
    	<properties>
    		<factory>spring</factory>
    		<source>initDBService</source>
    	</properties>
    </destination>
    
    <destination id="loginService">
    	<properties>
    		<factory>spring</factory>
    		<source>loginService</source>
    	</properties>
    </destination>
    
    <destination id="usuariosService">
    	<properties>
    		<factory>spring</factory>
    		<source>usuariosService</source>
    	</properties>
    </destination>
    
    <destination id="redesService">
    	<properties>
    		<factory>spring</factory>
    		<source>redesService</source>
    	</properties>
    </destination>
    
    <destination id="datosMaestrosService">
    	<properties>
    		<factory>spring</factory>
    		<source>datosMaestrosService</source>
    	</properties>
    </destination>
    <destination id="atributosService">
        	<properties>
        		<factory>spring</factory>
        		<source>atributosService</source>
        	</properties>
    </destination>
	<destination id="recursosService">
        	<properties>
        		<factory>spring</factory>
        		<source>recursosService</source>
        	</properties>
    </destination>
    	<destination id="gruposRecursosService">
        	<properties>
        		<factory>spring</factory>
        		<source>gruposRecursosService</source>
        	</properties>
    </destination>
</service>