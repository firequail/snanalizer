<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:sna="sna.*">
	<mx:Metadata>
	   [ Event( name="result", type="mx.rpc.events.ResultEvent") ]
	</mx:Metadata>
		
	<mx:Panel title="Modificar Atributo">
		<mx:Form id="form1">
			<mx:FormItem label="Nombre" tabIndex="1">
				<mx:TextInput id="nombre" text="{atributo.nombre}"/>
			</mx:FormItem>
			<mx:FormItem label="Descripción" tabIndex="2">
				<mx:TextInput id="descripcion" text="{atributo.descripcion}"/>
			</mx:FormItem>
			<mx:FormItem label="Activo" tabIndex="3">
				<mx:CheckBox id="activo" selected="{atributo.estado}"/> 
			</mx:FormItem>

		</mx:Form>
		<mx:ControlBar horizontalAlign="right">
			<mx:Button id="okButton" label="OK" tabIndex="5" />
			<mx:Button label="Cancelar" click="cancelar()" tabIndex="6" />
		</mx:ControlBar>
	</mx:Panel>
	
	<!-- Validación de campos -->
	<mx:StringValidator source="{nombre}" property="text" requiredFieldError="Campo requerido" trigger="{okButton}" triggerEvent="click" valid="guardar()" />
	
	<mx:RemoteObject id="atributosService" destination="atributosService"/>
	
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.rpc.events.ResultEvent;
			
			[Bindable]
			public var atributo:Object;
						
			private function guardar():void {
				atributosService.modificar(atributo.id, nombre.text, descripcion.text, activo.selected);
				dispatchEvent(ResultEvent.createEvent());
			}
			
			private function cancelar():void {
				dispatchEvent(ResultEvent.createEvent());
			}
			
		]]>
	</mx:Script>
	
</mx:VBox>
