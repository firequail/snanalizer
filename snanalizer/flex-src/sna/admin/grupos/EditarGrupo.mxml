					//dispatchEvent(ResultEvent.createEvent());
			}
			
			private function cancelar():void {
				dispatchEvent(ResultEvent.createEvent());
			}
			
			private function load():void {
				gruposRecursosService.getRecursos(grupo.id as int);
				recursosService.getAll();
				
			}


			
		]]>
	</mx:Script>
	
	
</mx:VBox>
