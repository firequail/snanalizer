<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" creationComplete="load()" width="100%" height="100%">
	<mx:Metadata>
	   [ Event( name="result", type="mx.rpc.events.ResultEvent") ]
	</mx:Metadata>

	<mx:RemoteObject id="recursosService" destination="recursosService"/>
	


	<mx:DataGrid id="recursos"  dataProvider="{recursosService.getAll.lastResult}" doubleClickEnabled="true" doubleClick="modificarRecurso()"  width="100%" height="100%">
		<mx:columns>
			<mx:DataGridColumn headerText="Nombre">
				<mx:itemRenderer>
					<mx:Component>
						<mx:Label text="{data.usuario.nombre}"/>
					</mx:Component>
				</mx:itemRenderer>
			</mx:DataGridColumn>

			<mx:DataGridColumn headerText="Apellido">
				<mx:itemRenderer>
					<mx:Component>
						<mx:Label text="{data.usuario.apellido}"/>
					</mx:Component>
				</mx:itemRenderer>
			</mx:DataGridColumn>

			<mx:DataGridColumn headerText="Area">
				<mx:itemRenderer>
					<mx:Component>
						<mx:Label text="{data.area.nombre}"/>
					</mx:Component>
				</mx:itemRenderer>
			</mx:DataGridColumn>

			<mx:DataGridColumn headerText="Puesto">
				<mx:itemRenderer>
					<mx:Component>
						<mx:Label text="{data.puesto.nombre}"/>
					</mx:Component>
				</mx:itemRenderer>
			</mx:DataGridColumn>

			<mx:DataGridColumn headerText="Seniority">
				<mx:itemRenderer>
					<mx:Component>
						<mx:Label text="{data.seniority.nombre}"/>
					</mx:Component>
				</mx:itemRenderer>
			</mx:DataGridColumn>
		</mx:columns>

	</mx:DataGrid>
	
	
	<mx:Script>
		<![CDATA[
			import mx.utils.StringUtil;
			import mx.controls.dataGridClasses.DataGridListData;
			import mx.controls.Alert;
			import mx.rpc.events.ResultEvent;
			
			public function load():void {
				recursosService.getAll();
			}

			private function modificarRecurso():void {
				dispatchEvent(ResultEvent.createEvent(recursos.selectedItem));
			}
			


		]]>
	</mx:Script>
</mx:Canvas>
